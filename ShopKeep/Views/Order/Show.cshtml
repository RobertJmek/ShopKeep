@model ShopKeep.Models.Order

@{
    ViewData["Title"] = $"Comanda #{Model.Id}";
}

<div class="container my-4">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> <strong>@TempData["message"]</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Comenzi</a></li>
            <li class="breadcrumb-item active" aria-current="page">#@Model.Id</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Detalii comandă</h5>
                        <span class="badge bg-secondary">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Data</small>
                                <strong>@Model.OrderDate.ToString("dd MMM yyyy, HH:mm")</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Total</small>
                                <strong class="text-success">@Model.TotalAmount.ToString("C2")</strong>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Adresă livrare</small>
                                <strong>@(string.IsNullOrWhiteSpace(Model.DeliveryAddress) ? "—" : Model.DeliveryAddress)</strong>
                            </div>
                        </div>
                    </div>

                    <h6 class="fw-bold mb-2"><i class="bi bi-box-seam"></i> Produse</h6>

                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Produs</th>
                                        <th class="text-end">Preț</th>
                                        <th class="text-center">Cantitate</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                @if (!string.IsNullOrWhiteSpace(item.ProductImageUrl))
                                                {
                                                    <img src="@item.ProductImageUrl" alt="@item.ProductTitle" 
                                                         class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="rounded bg-light d-flex align-items-center justify-content-center" 
                                                         style="width: 60px; height: 60px;">
                                                        <i class="bi bi-image text-muted"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="fw-semibold">@(item.ProductTitle ?? "Produs necunoscut")</div>
                                                    @if (item.Product?.Category != null)
                                                    {
                                                        <small class="text-muted">@item.Product.Category.Name</small>
                                                    }
                                                    @if (item.ProductId == null)
                                                    {
                                                        <small class="text-danger d-block"><i class="bi bi-exclamation-circle"></i> Produs șters</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-end">@item.UnitPrice.ToString("C2")</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end fw-semibold">@item.Subtotal.ToString("C2")</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light border">Nu există produse pe această comandă.</div>
                    }

                    <div class="d-flex justify-content-end">
                        <div class="p-3 bg-light rounded" style="min-width: 260px;">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Total</span>
                                <strong class="text-success">@Model.TotalAmount.ToString("C2")</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="fw-bold mb-3"><i class="bi bi-gear"></i> Acțiuni</h6>

                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="UpdateStatus" method="post" class="mb-3">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label class="form-label">Status</label>
                            <select class="form-select" name="status">
                                <option value="Plasată" selected="@(Model.Status == "Plasată")">Plasată</option>
                                <option value="În procesare" selected="@(Model.Status == "În procesare")">În procesare</option>
                                <option value="Expediată" selected="@(Model.Status == "Expediată")">Expediată</option>
                                <option value="Livrată" selected="@(Model.Status == "Livrată")">Livrată</option>
                                <option value="Anulată" selected="@(Model.Status == "Anulată")">Anulată</option>
                            </select>
                            <button type="submit" class="btn btn-primary w-100 mt-2">
                                <i class="bi bi-save"></i> Actualizează status
                            </button>
                        </form>

                        <details class="mt-2">
                            <summary class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> Șterge comanda
                            </summary>
                            <div class="alert alert-light border shadow-sm mt-2 mb-0">
                                <div class="fw-semibold">Ești sigur că vrei să ștergi comanda <strong>#@Model.Id</strong>?</div>
                                <form asp-action="Delete" method="post" class="mt-2">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Confirmă ștergerea
                                    </button>
                                </form>
                            </div>
                        </details>
                    }
                    else
                    {
                        @if (Model.Status == "Plasată")
                        {
                            <details class="mb-3">
                                <summary class="btn btn-outline-danger w-100">
                                    <i class="bi bi-x-circle"></i> Anulează comanda
                                </summary>
                                <div class="alert alert-light border shadow-sm mt-2 mb-0">
                                    <div class="fw-semibold">Sigur vrei să anulezi această comandă <strong>#@Model.Id</strong>?</div>
                                    <form asp-action="Cancel" method="post" class="mt-2">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-x-circle"></i> Confirmă anularea
                                        </button>
                                    </form>
                                </div>
                            </details>
                            <div class="small text-muted">Poți anula comanda doar cât timp este „Plasată”.</div>
                        }
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-3">
                        <i class="bi bi-arrow-left"></i> Înapoi la comenzi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">