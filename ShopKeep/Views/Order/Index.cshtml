@{
    ViewData["Title"] = "Comenzi";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1"><i class="bi bi-receipt"></i> Comenzi</h1>
            <p class="text-muted mb-0">Istoricul comenzilor tale</p>
        </div>
    </div>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> <strong>@ViewBag.message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <form method="get" asp-action="Index" class="row g-3 align-items-end">
                    <div class="col-md-9">
                        <label class="form-label">
                            <i class="bi bi-search"></i> Caută comandă
                        </label>
                        <input type="text" class="form-control" name="search" 
                               value="@ViewBag.Search" 
                               placeholder="Caută după ID comandă, email, nume sau username client..." />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Caută
                        </button>
                    </div>
                </form>
                @if (!string.IsNullOrWhiteSpace(ViewBag.Search))
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Resetează
                        </a>
                        <span class="badge bg-info ms-2">
                            <i class="bi bi-search"></i> Căutare: "@ViewBag.Search"
                        </span>
                    </div>
                }
            </div>
        </div>
    }

    @if (ViewBag.Orders != null && ((IEnumerable<ShopKeep.Models.Order>)ViewBag.Orders).Any())
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">#</th>
                            <th>Data</th>
                            <th>Status</th>
                            <th class="text-end">Total</th>
                            <th class="text-end pe-3">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var order in ViewBag.Orders)
                    {
                        <tr>
                            <td class="ps-3 fw-semibold">#@order.Id</td>
                            <td>@order.OrderDate.ToString("dd MMM yyyy, HH:mm")</td>
                            <td>
                                <span class="badge bg-secondary">@order.Status</span>
                            </td>
                            <td class="text-end fw-semibold text-success">@order.TotalAmount.ToString("C2")</td>
                            <td class="text-end pe-3">
                                <a asp-action="Show" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Detalii
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-light border shadow-sm">
            <i class="bi bi-bag"></i> Nu ai încă nicio comandă.
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">