@model ShopKeep.Models.Category

@using ShopKeep.Models

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ShopKeep.Models.ApplicationUser> SignInManager
@inject UserManager<ShopKeep.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Detalii Categorie";

    var canSeeAllProducts = SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor"));
    var visibleProducts = (Model.Products ?? Enumerable.Empty<Product>())
        .Where(p => canSeeAllProducts || p.Status == (int)ProductStatus.Approved)
        .ToList();
}

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Categorii</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalii</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-tag-fill"></i> @Model.Name
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">ID Categorie</small>
                                <strong class="fs-5">#@Model.Id</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Număr Produse</small>
                                <strong class="fs-5">@visibleProducts.Count produse</strong>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-2">Nume Categorie</small>
                                <h3 class="mb-0 text-primary">@Model.Name</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (visibleProducts.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-box-seam"></i> Produse în această categorie
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var product in visibleProducts)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@product.Title</h6>
                                        <small class="text-muted">@product.Price.ToString("C2")</small>
                                    </div>
                                    <span class="badge bg-success rounded-pill">În stoc: @product.Stock</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    @(canSeeAllProducts ? "Această categorie nu conține încă produse." : "Această categorie nu conține încă produse publice.")
                </div>
            }

            <div class="mt-3">
                <a class="btn btn-outline-success" asp-controller="Product" asp-action="Index" asp-route-categoryId="@Model.Id">
                    <i class="bi bi-funnel"></i> Vezi produsele din această categorie
                </a>
            </div>
        </div>

        <div class="col-lg-4">
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Acțiuni</h5>
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editează Categoria
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-trash"></i> Șterge Categoria
                                </button>
                            </form>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Lista
                            </a>
                        </div>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-info-circle"></i> Statistici
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-box text-primary"></i> 
                            <strong>@visibleProducts.Count</strong> produse totale
                        </li>
                        <li>
                            <i class="bi bi-archive text-success"></i> 
                            <strong>@visibleProducts.Sum(p => p.Stock)</strong> unități în stoc
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
