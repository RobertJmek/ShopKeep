@model ShopKeep.Models.Category

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ShopKeep.Models.ApplicationUser> SignInManager
@inject UserManager<ShopKeep.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Detalii Categorie";
}

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Categorii</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalii</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-tag-fill"></i> @Model.Name
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">ID Categorie</small>
                                <strong class="fs-5">#@Model.Id</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Număr Produse</small>
                                <strong class="fs-5">@(Model.Products?.Count ?? 0) produse</strong>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-2">Nume Categorie</small>
                                <h3 class="mb-0 text-primary">@Model.Name</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-box-seam"></i> Produse în această categorie
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var product in Model.Products)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@product.Title</h6>
                                        <small class="text-muted">@product.Price.ToString("C2")</small>
                                    </div>
                                    <span class="badge bg-success rounded-pill">În stoc: @product.Stock</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Această categorie nu conține încă produse.
                </div>
            }
        </div>

        <div class="col-lg-4">
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Acțiuni</h5>
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editează Categoria
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Șterge Categoria
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Lista
                            </a>
                        </div>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-info-circle"></i> Statistici
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-box text-primary"></i> 
                            <strong>@(Model.Products?.Count ?? 0)</strong> produse totale
                        </li>
                        <li>
                            <i class="bi bi-archive text-success"></i> 
                            <strong>@(Model.Products?.Sum(p => p.Stock) ?? 0)</strong> unități în stoc
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirmare Ștergere
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Ești sigur că vrei să ștergi categoria <strong>"@Model.Name"</strong>?</p>
                @if (Model.Products?.Count > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i> Această categorie conține @Model.Products.Count produse!
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulează</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Șterge Categorie
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
}

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
