@{
    ViewData["Title"] = "Categorii";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ShopKeep.Models.ApplicationUser> SignInManager
@inject UserManager<ShopKeep.Models.ApplicationUser> UserManager

<div class="container my-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-tags-fill"></i> Gestionare Categorii
            </h1>
            <p class="text-muted">Administrează categoriile produselor din magazin</p>
        </div>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <div class="col-auto align-self-center">
                <a asp-action="New" class="btn btn-success btn-lg shadow-sm">
                    <i class="bi bi-plus-circle"></i> Adaugă Categorie Nouă
                </a>
            </div>
        }
    </div>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> <strong>@ViewBag.message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Categories != null && ((IEnumerable<ShopKeep.Models.Category>)ViewBag.Categories).Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4" style="width: 60px;">ID</th>
                                <th>Nume Categorie</th>
                                <th style="width: 150px;">Nr. Produse</th>
                                <th class="text-center" style="width: 250px;">Acțiuni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-muted">#@category.Id</td>
                                    <td>
                                        <span class="badge bg-primary-subtle text-primary fs-6 fw-semibold px-3 py-2">
                                            @category.Name
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted">
                                            @(category.Products?.Count ?? 0) produse
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Show" asp-route-id="@category.Id" 
                                               class="btn btn-sm btn-outline-info" title="Detalii">
                                                <i class="bi bi-eye"></i> Detalii
                                            </a>
                                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@category.Id" 
                                                   class="btn btn-sm btn-outline-warning" title="Editează">
                                                    <i class="bi bi-pencil"></i> Editează
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal@(category.Id)" 
                                                    title="Șterge">
                                                <i class="bi bi-trash"></i> Șterge
                                            </button>
                                            }
                                        </div>
                                    </td>
                                </tr>

                                <!-- Delete Modal -->
                                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                {
                                <div class="modal fade" id="deleteModal@(category.Id)" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="deleteModalLabel">
                                                    <i class="bi bi-exclamation-triangle"></i> Confirmare Ștergere
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p class="mb-0">Ești sigur că vrei să ștergi categoria <strong>"@category.Name"</strong>?</p>
                                                @if (category.Products?.Count > 0)
                                                {
                                                    <div class="alert alert-warning mt-3 mb-0">
                                                        <i class="bi bi-exclamation-circle"></i> Această categorie conține @category.Products.Count produse!
                                                    </div>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulează</button>
                                                <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Șterge Categorie
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle fs-3 me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">Nu există categorii</h5>
                <p class="mb-0">Începe prin a adăuga prima categorie de produse.</p>
            </div>
        </div>
    }
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
