@{
    ViewData["Title"] = "Favorite";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1"><i class="bi bi-heart-fill text-danger"></i> Favorite</h1>
            <p class="text-muted mb-0">Produsele pe care vrei să le urmărești</p>
        </div>
    </div>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> <strong>@ViewBag.message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.WishlistItems != null && ((IEnumerable<ShopKeep.Models.WishlistItem>)ViewBag.WishlistItems).Any())
    {
        var items = (IEnumerable<ShopKeep.Models.WishlistItem>)ViewBag.WishlistItems;

        <div class="d-flex gap-2 mb-3">
            <form asp-action="MoveAllToCart" method="post">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-cart-plus"></i> Mută tot în coș
                </button>
            </form>
            <form asp-action="Clear" method="post">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Golește favorite
                </button>
            </form>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in items)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                           <img src="@item.Product?.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0 text-truncate">@item.Product?.Title</h5>
                                <span class="badge bg-primary">@item.Product?.Category?.Name</span>
                            </div>
                            <div class="text-success fw-bold mb-3">@((item.Product?.Price ?? 0).ToString("C2"))</div>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-controller="Product" asp-action="Show" asp-route-id="@item.ProductId" class="btn btn-outline-info btn-sm flex-grow-1">
                                    <i class="bi bi-eye"></i> Detalii
                                </a>
                                <form asp-action="Remove" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> Adăugat: @item.AddedAt.ToString("dd MMM yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border shadow-sm">
            <i class="bi bi-heart"></i> Nu ai produse la favorite.
        </div>
        <a asp-controller="Product" asp-action="Index" class="btn btn-success">
            <i class="bi bi-box-seam"></i> Vezi produse
        </a>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">