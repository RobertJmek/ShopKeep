@using Microsoft.AspNetCore.Identity
@using ShopKeep.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav flex-row align-items-center gap-2 sk-auth">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="btn btn-sm btn-outline-secondary sk-auth-pill"
               asp-area="Identity" asp-page="/Account/Manage/Index" title="Contul meu">
                <i class="bi bi-person-circle"></i>
                <span class="d-none d-md-inline">@User.Identity?.Name</span>
                <span class="d-md-none">Cont</span>
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="btn btn-sm btn-outline-danger sk-auth-pill">
                    <i class="bi bi-box-arrow-right"></i>
                    <span class="d-none d-md-inline">Logout</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-sm btn-outline-primary sk-auth-pill"
               asp-area="Identity" asp-page="/Account/Login">
                Log in
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-sm btn-primary sk-auth-pill"
               asp-area="Identity" asp-page="/Account/Register">
                Sign up
            </a>
        </li>
    }
</ul>
