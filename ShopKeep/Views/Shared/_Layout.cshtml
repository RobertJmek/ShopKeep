<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopKeep</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopKeep.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    @inject ShopKeep.Models.AppDbContext db
    @inject Microsoft.AspNetCore.Identity.UserManager<ShopKeep.Models.ApplicationUser> UserManager
    
    @{
        var isAuthenticated = User?.Identity?.IsAuthenticated == true;
        var isAdmin = User?.IsInRole("Admin") == true;
        var isEditor = User?.IsInRole("Editor") == true;
        var isStaff = isAdmin || isEditor;
        
        int cartCount = 0;
        int wishlistCount = 0;
        
        if (isAuthenticated && !isStaff)
        {
            var userId = UserManager.GetUserId(User);
            cartCount = db.ShoppingCartItems.Count(c => c.UserId == userId);
            wishlistCount = db.WishlistItems.Count(w => w.UserId == userId);
        }
    }

    <header>
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm py-2 sk-navbar">
            <div class="container">
                <div class="d-flex w-100 align-items-center justify-content-between gap-2">
                    <a class="navbar-brand m-0" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.svg" alt="ShopKeep" style="height: 45px;">
                    </a>

                    <ul class="navbar-nav me-auto flex-row flex-wrap align-items-center gap-2">
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">
                                    <i class="bi bi-receipt"></i> Gestionare comenzi
                                </a>
                            </li>
                            <li class="nav-item">
                                <div class="sk-nav-details">
                                    <div class="nav-link text-dark">
                                        <i class="bi bi-gear-fill"></i> Administrare
                                    </div>
                                    <div class="sk-nav-menu shadow-sm">
                                        <a class="sk-nav-menu-item" asp-controller="Product" asp-action="Index">
                                            <i class="bi bi-box-seam-fill"></i> Gestionează produse
                                        </a>
                                        <a class="sk-nav-menu-item" asp-controller="Category" asp-action="Index">
                                            <i class="bi bi-tags-fill"></i> Gestionează categorii
                                        </a>
                                        <a class="sk-nav-menu-item" asp-controller="AdminUsers" asp-action="Index">
                                            <i class="bi bi-people-fill"></i> Utilizatori
                                        </a>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <vc:categories-menu />
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">
                                    <i class="bi bi-box-seam-fill"></i> @(isEditor ? "Gestionează produse" : "Produse")
                                </a>
                            </li>

                            @if (isAuthenticated && !isStaff)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark position-relative" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                                        <i class="bi bi-cart"></i> Coș
                                        @if (cartCount > 0)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.75rem; padding: 0.3em 0.5em;">
                                                @cartCount
                                            </span>
                                        }
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark position-relative" asp-area="" asp-controller="Wishlist" asp-action="Index">
                                        <i class="bi bi-heart-fill"></i> Favorite
                                        @if (wishlistCount > 0)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.75rem; padding: 0.3em 0.5em;">
                                                @wishlistCount
                                            </span>
                                        }
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">
                                        <i class="bi bi-receipt"></i> Comenzile mele
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <form asp-controller="Product" asp-action="Index" method="get" class="d-flex me-3" style="min-width: 250px;">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" name="search" placeholder="Caută produse..." 
                                   value="@Context.Request.Query["search"]" aria-label="Caută produse">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-5">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted position-absolute bottom-0 w-100 bg-white">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="fw-bold">
                        <i class="bi bi-shop"></i> ShopKeep
                    </h5>
                    <p class="small mb-0">
                        Magazinul tău online de încredere pentru toate nevoile tale.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="small mb-1">
                        &copy; 2026 - ShopKeep - Toate drepturile rezervate
                    </p>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none small">
                        <i class="bi bi-shield-lock"></i> Politica de Confidențialitate
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
