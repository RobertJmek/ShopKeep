@model IReadOnlyList<ShopKeep.ViewComponents.CategoriesMenuItemVM>

<details class="nav-item">
    <summary class="nav-link text-dark">
        <i class="bi bi-tags-fill"></i> Categorii
    </summary>

    <div class="mt-2 p-2 border rounded bg-white shadow-sm" style="min-width: 240px;">
        <a class="d-block text-decoration-none py-1 @(Model.Any(m => m.IsSelected) ? "text-dark" : "fw-semibold text-success")"
           asp-area="" asp-controller="Product" asp-action="Index">
            Toate produsele
        </a>

        <hr class="my-2" />

        @if (Model.Count == 0)
        {
            <div class="text-muted small">Nu există categorii încă.</div>
        }
        else
        {
            @foreach (var c in Model)
            {
                <a class="d-block text-decoration-none py-1 @(c.IsSelected ? "fw-semibold text-success" : "text-dark")"
                   asp-area="" asp-controller="Product" asp-action="Index" asp-route-categoryId="@c.Id">
                    @c.Name
                </a>
            }
        }

        <hr class="my-2" />

        <a class="d-block text-decoration-none py-1 text-dark"
           asp-area="" asp-controller="Category" asp-action="Index">
            Vezi toate categoriile
        </a>
    </div>
</details>

<style>
    details.nav-item > summary {
        list-style: none;
        cursor: pointer;
    }

    details.nav-item > summary::-webkit-details-marker {
        display: none;
    }
</style>
