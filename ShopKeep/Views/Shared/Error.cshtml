@model ErrorViewModel
@{
    ViewData["Title"] = "Eroare";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Error Icon -->
            <div class="text-center mb-5">
                <div class="rounded-circle bg-danger bg-opacity-10 d-inline-flex p-4 mb-3">
                    <i class="bi bi-exclamation-triangle fs-1 text-danger"></i>
                </div>
                <h1 class="display-3 fw-bold text-danger mb-3">Oops!</h1>
                <p class="lead text-muted">
                    A apărut o eroare în procesarea cererii tale.
                </p>
            </div>

            <!-- Error Details Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-5">
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-warning d-flex align-items-start mb-4">
                            <i class="bi bi-info-circle fs-4 me-3"></i>
                            <div>
                                <h6 class="mb-1">ID Cerere</h6>
                                <code class="text-dark">@Model.RequestId</code>
                                <p class="small text-muted mb-0 mt-2">
                                    Salvează acest ID pentru a raporta problema echipei de suport.
                                </p>
                            </div>
                        </div>
                    }

                    <h4 class="fw-bold mb-3">
                        <i class="bi bi-lightbulb text-warning"></i> Ce poți face?
                    </h4>
                    
                    <div class="list-group mb-4">
                        <div class="list-group-item d-flex align-items-start">
                            <i class="bi bi-arrow-clockwise text-primary fs-4 me-3"></i>
                            <div>
                                <h6 class="mb-1">Reîncarcă pagina</h6>
                                <small class="text-muted">Uneori o simplă reîmprospătare poate rezolva problema</small>
                            </div>
                        </div>
                        <div class="list-group-item d-flex align-items-start">
                            <i class="bi bi-arrow-left text-success fs-4 me-3"></i>
                            <div>
                                <h6 class="mb-1">Întoarce-te la pagina anterioară</h6>
                                <small class="text-muted">Navighează înapoi și încearcă din nou</small>
                            </div>
                        </div>
                        <div class="list-group-item d-flex align-items-start">
                            <i class="bi bi-house text-info fs-4 me-3"></i>
                            <div>
                                <h6 class="mb-1">Mergi la pagina principală</h6>
                                <small class="text-muted">Începe navigarea din nou de la început</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Înapoi
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house"></i> Pagina Principală
                        </a>
                    </div>
                </div>
            </div>

            <!-- Development Mode Info (doar pentru development) -->
            @if (System.Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-code-slash"></i> Mod Dezvoltare
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-2">
                            Modul de dezvoltare afișează informații detaliate despre erori. 
                            Această funcție ar trebui <strong>dezactivată</strong> în producție.
                        </p>
                        <p class="small text-muted mb-0">
                            Pentru a activa/dezactiva modul de dezvoltare, setează variabila de mediu 
                            <code>ASPNETCORE_ENVIRONMENT</code> la <code>Development</code> sau <code>Production</code>.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
