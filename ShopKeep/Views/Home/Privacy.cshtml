@{
    ViewData["Title"] = "Politica de Confidențialitate";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex p-4 mb-3">
                    <i class="bi bi-shield-lock fs-1 text-primary"></i>
                </div>
                <h1 class="display-4 fw-bold mb-3">Politica de Confidențialitate</h1>
                <p class="lead text-muted">
                    Ultima actualizare: 10 Ianuarie 2026
                </p>
            </div>

            <!-- Content -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-5">
                    <section class="mb-5">
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-info-circle"></i> Introducere
                        </h3>
                        <p class="text-muted">
                            La <strong>ShopKeep</strong>, confidențialitatea ta este foarte importantă pentru noi. 
                            Această politică de confidențialitate explică modul în care colectăm, folosim și protejăm 
                            informațiile tale personale atunci când cumperi produse din magazinul nostru online.
                        </p>
                    </section>

                    <section class="mb-5">
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-collection"></i> Informații colectate
                        </h3>
                        <p class="text-muted">Colectăm următoarele tipuri de informații:</p>
                        <ul class="text-muted">
                            <li><strong>Informații de cont:</strong> Nume complet, adresă de email, parolă (criptată)</li>
                            <li><strong>Informații de profil:</strong> Data nașterii, adresă, număr de telefon</li>
                            <li><strong>Informații de comenzi:</strong> Istoricul achizițiilor, preferințe</li>
                            <li><strong>Date tehnice:</strong> Adresă IP, tip browser, sistem de operare</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-gear"></i> Cum folosim informațiile
                        </h3>
                        <div class="bg-light p-4 rounded">
                            <ul class="mb-0 text-muted">
                                <li>Pentru a procesa și livra comenzile tale</li>
                                <li>Pentru a îmbunătăți experiența utilizatorului</li>
                                <li>Pentru a trimite notificări importante despre comenzi</li>
                                <li>Pentru a personaliza ofertele și recomandările</li>
                                <li>Pentru a asigura securitatea platformei</li>
                            </ul>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-shield-check"></i> Protecția datelor
                        </h3>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card bg-success bg-opacity-10 border-success border h-100">
                                    <div class="card-body">
                                        <h5 class="text-success">
                                            <i class="bi bi-lock-fill"></i> Criptare
                                        </h5>
                                        <p class="small mb-0 text-muted">
                                            Toate datele sensibile sunt criptate folosind standarde de securitate moderne
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-info bg-opacity-10 border-info border h-100">
                                    <div class="card-body">
                                        <h5 class="text-info">
                                            <i class="bi bi-server"></i> Servere Securizate
                                        </h5>
                                        <p class="small mb-0 text-muted">
                                            Datele sunt stocate pe servere securizate cu acces restricționat
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-hand-thumbs-up"></i> Drepturile tale
                        </h3>
                        <p class="text-muted">Conform GDPR, ai următoarele drepturi:</p>
                        <div class="list-group">
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Dreptul de acces</h6>
                                    <small><i class="bi bi-check-circle text-success"></i></small>
                                </div>
                                <small class="text-muted">Poți solicita o copie a datelor tale personale</small>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Dreptul de rectificare</h6>
                                    <small><i class="bi bi-check-circle text-success"></i></small>
                                </div>
                                <small class="text-muted">Poți corecta informațiile inexacte</small>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Dreptul la ștergere</h6>
                                    <small><i class="bi bi-check-circle text-success"></i></small>
                                </div>
                                <small class="text-muted">Poți solicita ștergerea datelor tale</small>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Dreptul de portabilitate</h6>
                                    <small><i class="bi bi-check-circle text-success"></i></small>
                                </div>
                                <small class="text-muted">Poți transfera datele către alt serviciu</small>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-cookie"></i> Cookie-uri
                        </h3>
                        <p class="text-muted">
                            Folosim cookie-uri pentru a îmbunătăți experiența ta pe site. 
                            Cookie-urile ne ajută să:
                        </p>
                        <ul class="text-muted">
                            <li>Ținem minte preferințele tale</li>
                            <li>Menținem sesiunea activă</li>
                            <li>Analizăm traficul pe site</li>
                        </ul>
                        <p class="text-muted">
                            Poți dezactiva cookie-urile din setările browser-ului tău.
                        </p>
                    </section>

                    <section>
                        <h3 class="fw-bold text-primary mb-3">
                            <i class="bi bi-envelope"></i> Contact
                        </h3>
                        <div class="alert alert-info d-flex align-items-start">
                            <i class="bi bi-info-circle fs-4 me-3"></i>
                            <div>
                                <p class="mb-2">
                                    Pentru orice întrebări despre politica de confidențialitate sau 
                                    pentru a-ți exercita drepturile, ne poți contacta la:
                                </p>
                                <p class="mb-0">
                                    <strong>Email:</strong> privacy@shopkeep.com<br>
                                    <strong>Telefon:</strong> +40 123 456 789
                                </p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <!-- Back Button -->
            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-arrow-left"></i> Înapoi la Pagina Principală
                </a>
            </div>
        </div>
    </div>
</div>

