@{
    ViewData["Title"] = "Propunerile mele";
}

@using ShopKeep.Models

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 fw-bold text-success mb-1">
                <i class="bi bi-lightbulb"></i> Propunerile mele
            </h1>
            <div class="text-muted">Aici vezi produsele propuse de tine și statusul lor.</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="New" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Propune produs
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Catalog
            </a>
        </div>
    </div>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-info-circle"></i> <strong>@ViewBag.message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Products != null && ((IEnumerable<Product>)ViewBag.Products).Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in (IEnumerable<Product>)ViewBag.Products)
            {
                var status = (ProductStatus)product.Status;

                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title"
                             style="height: 220px; object-fit: cover;"
                                >

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <h5 class="card-title mb-1">@product.Title</h5>
                                @switch (status)
                                {
                                    case ProductStatus.Pending:
                                        <span class="badge bg-warning text-dark">În așteptare</span>
                                        break;
                                    case ProductStatus.Approved:
                                        <span class="badge bg-success">Aprobat</span>
                                        break;
                                    case ProductStatus.Rejected:
                                        <span class="badge bg-danger">Respins</span>
                                        break;
                                }
                            </div>

                            <div class="text-muted small mb-2">@product.Category?.Name</div>

                            @if (status == ProductStatus.Rejected && !string.IsNullOrWhiteSpace(product.AdminFeedback))
                            {
                                <div class="alert alert-warning small mb-2">
                                    <div class="fw-semibold">Feedback Admin:</div>
                                    <div>@product.AdminFeedback</div>
                                </div>
                            }

                            <div class="mt-auto d-flex gap-2 flex-wrap">
                                <a asp-action="Show" asp-route-id="@product.Id" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i> Vezi
                                </a>

                                @if (status != ProductStatus.Approved)
                                {
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Editează
                                    </a>
                                    <details class="w-100">
                                        <summary class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Șterge
                                        </summary>
                                        <div class="alert alert-light border shadow-sm mt-2 mb-0">
                                            <div class="fw-semibold">Sigur vrei să ștergi această propunere?</div>
                                            <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="mt-2">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Confirmă ștergerea
                                                </button>
                                            </form>
                                        </div>
                                    </details>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm mb-0">
            <i class="bi bi-info-circle"></i> Nu ai încă propuneri.
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
