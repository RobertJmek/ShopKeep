@model ShopKeep.Models.Product

@{
    ViewData["Title"] = "Editează Produsul";
}

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Produse</a></li>
            <li class="breadcrumb-item"><a asp-action="Show" asp-route-id="@Model.Id">@Model.Title</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editează</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4 sticky-top" style="top: 20px;">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" 
                     style="height: 300px; object-fit: cover;"
                     onerror="this.src='https://via.placeholder.com/300x300?text=No+Image'">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Previzualizare</h6>
                    <h5 class="fw-bold">@Model.Title</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="h5 text-success mb-0">@Model.Price.ToString("C2")</span>
                        <span class="badge bg-primary">@Model.Category?.Name</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Editează Produsul
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted">ID Produs</small>
                                <div class="fw-bold">#@Model.Id</div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Title" class="form-label fw-bold">
                                    <i class="bi bi-text-left"></i> Titlu Produs
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" 
                                       class="form-control form-control-lg" 
                                       placeholder="Ex: Laptop Dell Inspiron 15" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="CategoryId" class="form-label fw-bold">
                                    <i class="bi bi-tag"></i> Categorie
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CategoryId" 
                                        asp-items="@ViewBag.Categories" 
                                        class="form-select form-select-lg">
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-bold">
                                    <i class="bi bi-card-text"></i> Descriere
                                    <span class="text-danger">*</span>
                                </label>
                                <textarea asp-for="Description" 
                                          class="form-control" 
                                          rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageUrl" class="form-label fw-bold">
                                    <i class="bi bi-image"></i> URL Imagine
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ImageUrl" 
                                       class="form-control" />
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">
                                    <i class="bi bi-currency-dollar"></i> Preț (RON)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Price" 
                                       type="number" 
                                       step="0.01"
                                       class="form-control form-control-lg" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Stock" class="form-label fw-bold">
                                    <i class="bi bi-box"></i> Stoc
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Stock" 
                                       type="number" 
                                       class="form-control form-control-lg" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="alert alert-warning d-flex align-items-start mt-4">
                            <i class="bi bi-exclamation-triangle fs-4 me-3"></i>
                            <div>
                                <strong>Atenție:</strong> Modificările vor fi vizibile imediat pentru clienți.
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-x-circle"></i> Anulează
                                </a>
                                <a asp-action="Show" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg">
                                    <i class="bi bi-eye"></i> Vezi Detalii
                                </a>
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="bi bi-save"></i> Salvează Modificările
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
