@model ShopKeep.Models.Product

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ShopKeep.Models.ApplicationUser> SignInManager
@inject UserManager<ShopKeep.Models.ApplicationUser> UserManager

@using ShopKeep.Models

@{
    ViewData["Title"] = Model.Title;

    var currentUserId = SignInManager.IsSignedIn(User) ? UserManager.GetUserId(User) : null;
    var isStaff = SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor"));
    var canEditorManage = SignInManager.IsSignedIn(User)
        && User.IsInRole("Editor")
        && Model.ProposedByUserId != null
        && Model.ProposedByUserId == currentUserId;
    var canManage = SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || canEditorManage);

    var ratings = Model.Reviews
        ?.Where(r => r.Rating.HasValue)
        .Select(r => r.Rating!.Value)
        .ToList() ?? new List<int>();
    var avgRating = ratings.Count > 0 ? ratings.Average() : 0;
}

<div class="container my-4">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-info-circle"></i> <strong>@TempData["message"]</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Produse</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor")) && Model.Status != (int)ProductStatus.Approved)
    {
        var statusText = Model.Status == (int)ProductStatus.Pending ? "În așteptare" : "Respins";
        var statusClass = Model.Status == (int)ProductStatus.Pending ? "alert-warning" : "alert-danger";

        <div class="alert @statusClass shadow-sm">
            <div class="d-flex align-items-start gap-2">
                <i class="bi bi-info-circle fs-4"></i>
                <div>
                    <div class="fw-semibold">Produsul nu este public: @statusText</div>
                    @if (!string.IsNullOrWhiteSpace(Model.AdminFeedback))
                    {
                        <div class="small mt-1"><span class="fw-semibold">Feedback Admin:</span> @Model.AdminFeedback</div>
                    }
                </div>
            </div>
        </div>
    }

    @if (User.IsInRole("Admin") && Model.ProposedBy != null)
    {
        <div class="alert alert-info shadow-sm">
            <div class="d-flex align-items-start gap-2">
                <i class="bi bi-person-badge fs-4"></i>
                <div>
                    <div class="fw-semibold">Propus de Editor</div>
                    <div class="small mt-1">
                        <strong>@Model.ProposedBy.FullName</strong> (@Model.ProposedBy.Email)
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 mb-4 sticky-top" style="top: 20px;">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" 
                     style="height: 400px; object-fit: cover;"
                     >
                <div class="card-body">
                    @if (Model.IsInStock)
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle-fill"></i> <strong>Disponibil în stoc</strong> - @Model.Stock bucăți
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger mb-0">
                            <i class="bi bi-x-circle-fill"></i> <strong>Stoc epuizat</strong>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <span class="badge bg-primary-subtle text-primary mb-2">@Model.Category?.Name</span>
                            <h1 class="display-6 fw-bold mb-2">@Model.Title</h1>
                            <div class="mb-2">
                                @await Html.PartialAsync("_StarRating", new ShopKeep.Models.StarRatingVM
                                {
                                    Average = avgRating,
                                    RatingCount = ratings.Count,
                                    CssClass = ""
                                })
                            </div>
                            <small class="text-muted">ID Produs: #@Model.Id</small>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h2 class="text-success fw-bold display-4">@Model.Price.ToString("C2")</h2>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-card-text"></i> Descriere
                        </h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">
                                    <i class="bi bi-box"></i> Stoc disponibil
                                </small>
                                <strong class="fs-5">@Model.Stock bucăți</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">
                                    <i class="bi bi-tag"></i> Categorie
                                </small>
                                <strong class="fs-5">@Model.Category?.Name</strong>
                            </div>
                        </div>
                    </div>

                    @if (!isStaff)
                    {
                        var isInWishlist = (bool)(ViewBag.IsInWishlist ?? false);
                        <div class="d-flex justify-content-center">
                            <div class="w-100" style="max-width: 420px;">
                                <div class="d-grid gap-2">
                                    <form asp-controller="ShoppingCart" asp-action="Add" method="post" class="mb-0">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-success btn-lg" @((Model.IsInStock && Model.Status == (int)ProductStatus.Approved) ? "" : "disabled")>
                                            <i class="bi bi-cart-plus"></i> Adaugă în coș
                                        </button>
                                    </form>

                                    <form asp-controller="Wishlist" asp-action="Add" method="post" class="mb-0 wishlist-form" data-product-id="@Model.Id">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn @(isInWishlist ? "btn-danger" : "btn-outline-danger") btn-lg wishlist-btn" @((Model.Status == (int)ProductStatus.Approved) ? "" : "disabled")>
                                            <i class="bi @(isInWishlist ? "bi-heart-fill" : "bi-heart")"></i> <span class="wishlist-text">@(isInWishlist ? "În favorite" : "Adaugă la favorite")</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!isStaff && User?.Identity?.IsAuthenticated != true)
                    {
                        <div class="alert alert-light border shadow-sm mt-3 mb-0">
                            <div class="d-flex align-items-start gap-2">
                                <i class="bi bi-lock fs-4"></i>
                                <div>
                                    <div class="fw-semibold">Poți apăsa „Adaugă în coș” sau "Adaugă la favorite", iar apoi te vom ruga să te autentifici.</div>
                                    <div class="small text-muted">După login te întorci automat la produs.</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 flex-wrap mt-2">
                            <a class="btn btn-outline-secondary"
                               asp-area="Identity" asp-page="/Account/Login"
                               asp-route-returnUrl="@Url.Action("Show", "Product", new { id = Model.Id })">
                                <i class="bi bi-box-arrow-in-right"></i> Autentificare
                            </a>
                            <a class="btn btn-success"
                               asp-area="Identity" asp-page="/Account/Register"
                               asp-route-returnUrl="@Url.Action("Show", "Product", new { id = Model.Id })">
                                <i class="bi bi-person-plus"></i> Creează cont
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Editor")))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-gear"></i> Acțiuni Administrare
                        </h5>
                        <div class="d-flex gap-2 flex-wrap">
                            @if (canManage)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Editează Produsul
                                </a>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Șterge Produsul
                                    </button>
                                </form>
                            }
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Catalog
                            </a>
                        </div>
                    </div>
                </div>
            }

            @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin") && Model.Status != (int)ProductStatus.Approved)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-shield-check"></i> Moderare produs</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex gap-2 flex-wrap align-items-center">
                            <form asp-action="Approve" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check2-circle"></i> Aprobă și publică
                                </button>
                            </form>

                            <details>
                                <summary class="btn btn-outline-danger">
                                    <i class="bi bi-x-circle"></i> Respinge
                                </summary>
                                <div class="alert alert-light border shadow-sm mt-2 mb-0" style="width: 100%;">
                                    <form asp-action="Reject" method="post">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <label class="form-label">Feedback (opțional)</label>
                                        <textarea class="form-control" name="adminFeedback" rows="3" placeholder="Ce ar trebui îmbunătățit?">@Model.AdminFeedback</textarea>
                                        <button type="submit" class="btn btn-danger mt-2">
                                            <i class="bi bi-x-circle"></i> Confirmă respingerea
                                        </button>
                                    </form>
                                </div>
                            </details>
                        </div>
                        <div class="small text-muted mt-2">Aprobarea face produsul vizibil clienților.</div>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-left-text"></i> Lasă un review
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Status != (int)ProductStatus.Approved)
                    {
                        <div class="alert alert-light border mb-0">
                            <i class="bi bi-info-circle"></i> Nu poți lăsa review la un produs care nu este public.
                        </div>
                    }
                    else if (User?.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Review" asp-action="Add" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Rating (1-5)</label>
                                    <select class="form-select" name="rating">
                                        <option value="">Fără rating</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                                <div class="col-md-8">
                                    <label class="form-label fw-semibold">Comentariu</label>
                                    <textarea class="form-control" name="text" rows="3" placeholder="Cum ți s-a părut produsul?"></textarea>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send"></i> Trimite review
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-light border mb-0">
                            <i class="bi bi-lock"></i> Autentifică-te pentru a lăsa un review.
                        </div>
                    }
                </div>
            </div>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-star-fill text-warning"></i> Recenzii (@Model.ReviewCount)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="flex-grow-1">
                                            <strong>@review.User?.FullName</strong>
                                            <div class="text-warning">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi @(i <= (review.Rating ?? 0) ? "bi-star-fill" : "bi-star")"></i>
                                                }
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <small class="text-muted">@review.CreatedAt.ToString("dd MMM yyyy")</small>
                                            @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                                            {
                                                <details class="d-inline">
                                                    <summary class="btn btn-sm btn-outline-danger" style="cursor: pointer; list-style: none;" title="Șterge review (Admin)">
                                                        <i class="bi bi-trash"></i>
                                                    </summary>
                                                    <div class="alert alert-danger mt-2 mb-0 p-2 small" style="position: absolute; right: 0; z-index: 10; min-width: 250px;">
                                                        <strong>Șterge review?</strong>
                                                        <form asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id" method="post" class="d-inline ms-2">
                                                            <button type="submit" class="btn btn-danger btn-sm">
                                                                <i class="bi bi-check"></i> Da, șterge
                                                            </button>
                                                        </form>
                                                    </div>
                                                </details>
                                            }
                                        </div>
                                    </div>
                                    <p class="mb-0 text-muted">@review.Text</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Floating AI Chat Widget -->
<div id="chatWidget" class="chat-widget">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h6 class="mb-0">
                <i class="bi bi-robot"></i> Asistent AI
            </h6>
            <button id="closeChatBtn" class="btn btn-sm btn-link text-white p-0">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="card-body p-3" style="height: 400px; overflow-y: auto;" id="chatMessages">
            <div class="text-center text-muted py-5">
                <i class="bi bi-chat-dots fs-1"></i>
                <p class="mt-2 small">Pune o întrebare despre acest produs!</p>
            </div>
        </div>
        <div class="card-footer p-2">
            <form id="chatForm" class="d-flex gap-2">
                <input type="text" class="form-control form-control-sm" id="chatInput" 
                       placeholder="Întreabă ceva..."
                       autocomplete="off">
                <button type="submit" class="btn btn-primary btn-sm" id="sendBtn">
                    <i class="bi bi-send"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Floating Chat Button -->
<button id="chatToggleBtn" class="chat-toggle-btn">
    <i class="bi bi-chat-dots-fill"></i>
</button>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    /* Floating Chat Toggle Button */
    .chat-toggle-btn {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
        color: white;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
        z-index: 1000;
        transition: all 0.3s ease;
    }
    
    .chat-toggle-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 20px rgba(13, 110, 253, 0.6);
    }
    
    .chat-toggle-btn.hidden {
        display: none;
    }
    
    /* Chat Widget */
    .chat-widget {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 380px;
        max-width: calc(100vw - 60px);
        z-index: 1001;
        display: none;
        animation: slideUp 0.3s ease;
    }
    
    .chat-widget.active {
        display: block;
    }
    
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .chat-widget .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .chat-widget .card-header {
        padding: 0.75rem 1rem;
        border-radius: 15px 15px 0 0;
    }
    
    #closeChatBtn {
        text-decoration: none;
        font-size: 1.2rem;
        opacity: 0.8;
        transition: opacity 0.2s;
    }
    
    #closeChatBtn:hover {
        opacity: 1;
    }
    
    /* Chat Messages */
    .chat-message {
        margin-bottom: 1rem;
        animation: fadeIn 0.3s ease-in;
        display: flex;
    }
    
    .user-message {
        justify-content: flex-end;
    }
    
    .ai-message {
        justify-content: flex-start;
    }
    
    .chat-bubble {
        padding: 0.6rem 0.9rem;
        border-radius: 1rem;
        max-width: 80%;
        word-wrap: break-word;
        font-size: 0.9rem;
    }
    
    .user-message .chat-bubble {
        background-color: #0d6efd;
        color: white;
        border-radius: 1rem 1rem 0.2rem 1rem;
    }
    
    .ai-message .chat-bubble {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 1rem 1rem 1rem 0.2rem;
    }
    
    .confidence-badge {
        font-size: 0.65rem;
        margin-top: 0.25rem;
        padding-left: 0.5rem;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    #chatMessages::-webkit-scrollbar {
        width: 6px;
    }
    
    #chatMessages::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }
    
    #chatMessages::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 10px;
    }
    
    #chatMessages::-webkit-scrollbar-thumb:hover {
        background: #999;
    }
    
    /* Mobile Responsive */
    @@media (max-width: 576px) {
        .chat-widget {
            width: calc(100vw - 40px);
            right: 20px;
            bottom: 20px;
        }
        
        .chat-toggle-btn {
            width: 50px;
            height: 50px;
            font-size: 1.2rem;
            right: 20px;
            bottom: 20px;
        }
    }
</style>

<script>
    const productId = @Model.Id;
    const chatMessages = document.getElementById('chatMessages');
    const chatForm = document.getElementById('chatForm');
    const chatInput = document.getElementById('chatInput');
    const sendBtn = document.getElementById('sendBtn');
    const chatToggleBtn = document.getElementById('chatToggleBtn');
    const chatWidget = document.getElementById('chatWidget');
    const closeChatBtn = document.getElementById('closeChatBtn');

    // Toggle chat visibility
    chatToggleBtn.addEventListener('click', () => {
        chatWidget.classList.add('active');
        chatToggleBtn.classList.add('hidden');
        chatInput.focus();
    });

    closeChatBtn.addEventListener('click', () => {
        chatWidget.classList.remove('active');
        chatToggleBtn.classList.remove('hidden');
    });

    // Inițializare chat
    let isFirstMessage = true;

    chatForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const question = chatInput.value.trim();
        if (!question) return;

        // Elimină mesajul de bun venit la primul mesaj
        if (isFirstMessage) {
            chatMessages.innerHTML = '';
            isFirstMessage = false;
        }

        // Afișează întrebarea utilizatorului
        addMessage(question, 'user');
        chatInput.value = '';
        chatInput.disabled = true;
        sendBtn.disabled = true;

        // Afișează indicator de loading
        const loadingId = addLoadingMessage();

        try {
            const response = await fetch('/api/ProductAIChat/ask', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    question: question
                })
            });

            if (!response.ok) {
                throw new Error('Eroare la comunicarea cu serverul');
            }

            const data = await response.json();
            
            // Elimină loading și afișează răspunsul
            removeLoadingMessage(loadingId);
            addMessage(data.answer, 'ai', data.source, data.confidence);

        } catch (error) {
            console.error('Eroare:', error);
            removeLoadingMessage(loadingId);
            addMessage('Ne cerem scuze, a apărut o eroare. Vă rugăm încercați din nou.', 'ai', 'error', 'low');
        } finally {
            chatInput.disabled = false;
            sendBtn.disabled = false;
            chatInput.focus();
        }
    });

    function addMessage(text, type, source = '', confidence = '') {
        const messageDiv = document.createElement('div');
        messageDiv.className = `chat-message ${type}-message`;
        
        const bubbleDiv = document.createElement('div');
        bubbleDiv.className = 'chat-bubble';
        bubbleDiv.textContent = text;
        
        messageDiv.appendChild(bubbleDiv);
        
        // Adaugă badge-uri pentru mesajele AI
        if (type === 'ai' && source) {
            const badgeDiv = document.createElement('div');
            badgeDiv.className = 'confidence-badge';
            
            const sourceIcon = source === 'faq' ? 'database-check' : 
                              source === 'description' ? 'file-text' : 
                              'info-circle';
            
            const sourceText = source === 'faq' ? 'Din FAQ' : 
                              source === 'description' ? 'Din descriere' : 
                              'Răspuns general';
            
            const confidenceColor = confidence === 'high' ? 'success' : 
                                   confidence === 'medium' ? 'info' : 
                                   'secondary';
            
            badgeDiv.innerHTML = `
                <span class="badge bg-${confidenceColor}-subtle text-${confidenceColor}">
                    <i class="bi bi-${sourceIcon}"></i> ${sourceText}
                </span>
            `;
            
            messageDiv.appendChild(badgeDiv);
        }
        
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function addLoadingMessage() {
        const loadingId = 'loading-' + Date.now();
        const messageDiv = document.createElement('div');
        messageDiv.className = 'chat-message ai-message';
        messageDiv.id = loadingId;
        
        const bubbleDiv = document.createElement('div');
        bubbleDiv.className = 'chat-bubble';
        bubbleDiv.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Gândesc...';
        
        messageDiv.appendChild(bubbleDiv);
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
        
        return loadingId;
    }

    function removeLoadingMessage(loadingId) {
        const loadingMsg = document.getElementById(loadingId);
        if (loadingMsg) {
            loadingMsg.remove();
        }
    }

    // Wishlist AJAX
    const isAuthenticated = @(User?.Identity?.IsAuthenticated == true ? "true" : "false");
    
    document.querySelectorAll('.wishlist-form').forEach(form => {
        form.addEventListener('submit', function(e) {
            // Dacă user-ul nu este autentificat, lasă form-ul să se submiteze normal (redirect către login)
            if (!isAuthenticated) {
                return;
            }
            
            e.preventDefault();
            
            const formData = new FormData(this);
            const btn = this.querySelector('.wishlist-btn');
            const icon = btn.querySelector('i');
            const text = btn.querySelector('.wishlist-text');
            
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.isAdded) {
                        // Produs adăugat la favorite
                        btn.classList.remove('btn-outline-danger');
                        btn.classList.add('btn-danger');
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        text.textContent = 'În favorite';
                    } else {
                        // Produs șters din favorite
                        btn.classList.remove('btn-danger');
                        btn.classList.add('btn-outline-danger');
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        text.textContent = 'Adaugă la favorite';
                    }
                }
            })
            .catch(error => console.error('Eroare:', error));
        });
    });
</script>
