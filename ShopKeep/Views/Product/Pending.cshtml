@{
    ViewData["Title"] = "Propuneri în așteptare";
}

@using ShopKeep.Models

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 fw-bold text-success mb-1">
                <i class="bi bi-shield-check"></i> Propuneri produse
            </h1>
            <div class="text-muted">Doar Admin: aprobă sau respinge produsele propuse.</div>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Înapoi la catalog
        </a>
    </div>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-info-circle"></i> <strong>@ViewBag.message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Products != null && ((IEnumerable<Product>)ViewBag.Products).Any())
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Produs</th>
                            <th>Categorie</th>
                            <th>Propus de</th>
                            <th class="text-end">Preț</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in (IEnumerable<Product>)ViewBag.Products)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@product.Title</div>
                                    <div class="small text-muted">ID: #@product.Id</div>
                                </td>
                                <td>@product.Category?.Name</td>
                                <td>@(product.ProposedBy?.FullName ?? "-")</td>
                                <td class="text-end">@product.Price.ToString("C2")</td>
                                <td class="text-center">
                                    <span class="badge bg-warning text-dark">În așteptare</span>
                                </td>
                                <td class="text-end">
                                    <div class="d-flex gap-2 justify-content-end flex-wrap">
                                        <a asp-action="Show" asp-route-id="@product.Id" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-eye"></i> Vezi
                                        </a>

                                        <form asp-action="Approve" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="bi bi-check2-circle"></i> Aprobă
                                            </button>
                                        </form>

                                        <details>
                                            <summary class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-x-circle"></i> Respinge
                                            </summary>
                                            <div class="alert alert-light border shadow-sm mt-2 mb-0 text-start">
                                                <div class="fw-semibold mb-1">Respinge produsul</div>
                                                <form asp-action="Reject" method="post">
                                                    <input type="hidden" name="id" value="@product.Id" />
                                                    <label class="form-label">Feedback (opțional)</label>
                                                    <textarea class="form-control" name="adminFeedback" rows="3" placeholder="Ce ar trebui îmbunătățit?"></textarea>
                                                    <button type="submit" class="btn btn-danger btn-sm mt-2">
                                                        <i class="bi bi-x-circle"></i> Confirmă respingerea
                                                    </button>
                                                </form>
                                            </div>
                                        </details>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success shadow-sm mb-0">
            <i class="bi bi-check-circle-fill"></i> Nu există propuneri în așteptare.
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
