@{
    ViewData["Title"] = "Produse";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ShopKeep.Models.ApplicationUser> SignInManager
@inject UserManager<ShopKeep.Models.ApplicationUser> UserManager

@using ShopKeep.Models

@{
    var currentUserId = SignInManager.IsSignedIn(User) ? UserManager.GetUserId(User) : null;
    var isStaff = SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor"));
    int? selectedCategoryId = null;
    try { selectedCategoryId = (int?)ViewBag.SelectedCategoryId; } catch { selectedCategoryId = null; }
    string? selectedCategoryName = null;
    try { selectedCategoryName = (string?)ViewBag.SelectedCategoryName; } catch { selectedCategoryName = null; }
    string? searchTerm = null;
    try { searchTerm = (string?)ViewBag.SearchTerm; } catch { searchTerm = null; }
    string? sortBy = null;
    try { sortBy = (string?)ViewBag.SortBy; } catch { sortBy = null; }

    IEnumerable<ShopKeep.Models.Category> allCategories = Enumerable.Empty<ShopKeep.Models.Category>();
    try { allCategories = (IEnumerable<ShopKeep.Models.Category>)ViewBag.AllCategories; } catch { allCategories = Enumerable.Empty<ShopKeep.Models.Category>(); }
    
    List<int> wishlistProductIds = new List<int>();
    try { wishlistProductIds = (List<int>)ViewBag.WishlistProductIds; } catch { wishlistProductIds = new List<int>(); }
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-success">
                <i class="bi bi-box-seam-fill"></i> Catalog Produse
            </h1>
            <p class="text-muted">Explorează gama noastră completă de produse</p>

            @if (selectedCategoryId.HasValue || !string.IsNullOrWhiteSpace(searchTerm) || !string.IsNullOrWhiteSpace(sortBy))
            {
                <div class="mt-2 d-flex flex-wrap gap-2 align-items-center">
                    @if (selectedCategoryId.HasValue)
                    {
                        <span class="badge text-bg-success">
                            <i class="bi bi-funnel-fill"></i> Categorie: @(string.IsNullOrWhiteSpace(selectedCategoryName) ? "Necunoscută" : selectedCategoryName)
                        </span>
                    }
                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                    {
                        <span class="badge text-bg-info">
                            <i class="bi bi-search"></i> Căutare: "@searchTerm"
                        </span>
                    }
                    @if (!string.IsNullOrWhiteSpace(sortBy))
                    {
                        var sortLabel = sortBy switch
                        {
                            "price_asc" => "Preț crescător",
                            "price_desc" => "Preț descrescător",
                            "rating_asc" => "Rating crescător",
                            "rating_desc" => "Rating descrescător",
                            _ => ""
                        };
                        <span class="badge text-bg-warning text-dark">
                            <i class="bi bi-sort-down"></i> Sortare: @sortLabel
                        </span>
                    }
                    <a class="small text-decoration-none" asp-action="Index">
                        <i class="bi bi-x-circle"></i> Resetează toate filtrele
                    </a>
                </div>
            }
        </div>
        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor")))
        {
            <div class="col-auto align-self-center">
                <div class="d-flex gap-2 flex-wrap justify-content-end">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Pending" class="btn btn-outline-primary btn-lg shadow-sm">
                            <i class="bi bi-shield-check"></i> Propuneri
                        </a>
                    }
                    @if (User.IsInRole("Editor"))
                    {
                        <a asp-action="MyProposals" class="btn btn-outline-primary btn-lg shadow-sm">
                            <i class="bi bi-lightbulb"></i> Propunerile mele
                        </a>
                    }
                    <a asp-action="New" class="btn btn-success btn-lg shadow-sm">
                        <i class="bi bi-plus-circle"></i>
                        @(User.IsInRole("Editor") ? "Propune produs" : "Adaugă produs")
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="mb-3"><i class="bi bi-funnel"></i> Căutare și Filtrare</h5>
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <!-- Căutare după denumire -->
                <div class="col-sm-12 col-md-4">
                    <label class="form-label">
                        <i class="bi bi-search"></i> Caută după denumire
                    </label>
                    <input type="text" class="form-control" name="search" 
                           value="@searchTerm" 
                           placeholder="Ex: lapto, telefon, tabletă..." />
                </div>

                <!-- Filtrare după categorie -->
                <div class="col-sm-12 col-md-3">
                    <label class="form-label">
                        <i class="bi bi-tag"></i> Categorie
                    </label>
                    <select class="form-select" name="categoryId">
                        <option value="">Toate categoriile</option>
                        @foreach (var c in allCategories)
                        {
                            if (selectedCategoryId.HasValue && selectedCategoryId.Value == c.Id)
                            {
                                <option value="@c.Id" selected>@c.Name</option>
                            }
                            else
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        }
                    </select>
                </div>

                <!-- Sortare -->
                <div class="col-sm-12 col-md-3">
                    <label class="form-label">
                        <i class="bi bi-sort-down"></i> Sortare
                    </label>
                    <select class="form-select" name="sortBy">
                        <option value="">Implicit (cele mai noi)</option>
                        <option value="price_asc" selected="@(sortBy == "price_asc")">Preț: crescător</option>
                        <option value="price_desc" selected="@(sortBy == "price_desc")">Preț: descrescător</option>
                        <option value="rating_asc" selected="@(sortBy == "rating_asc")">Rating: crescător</option>
                        <option value="rating_desc" selected="@(sortBy == "rating_desc")">Rating: descrescător</option>
                    </select>
                </div>

                <!-- Butoane -->
                <div class="col-sm-12 col-md-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success flex-grow-1">
                            <i class="bi bi-search"></i> Aplică
                        </button>
                        @if (selectedCategoryId.HasValue || !string.IsNullOrWhiteSpace(searchTerm) || !string.IsNullOrWhiteSpace(sortBy))
                        {
                            <a class="btn btn-outline-secondary" asp-action="Index" title="Resetează">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> <strong>@ViewBag.message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Products != null && ((IEnumerable<ShopKeep.Models.Product>)ViewBag.Products).Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in ViewBag.Products)
            {
                var canEditorManage = SignInManager.IsSignedIn(User)
                    && User.IsInRole("Editor")
                    && product.ProposedByUserId != null
                    && product.ProposedByUserId == currentUserId;

                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-lift" style="cursor: pointer;" 
                         onclick="window.location.href='@Url.Action("Show", "Product", new { id = product.Id })'">
                        <div class="position-relative">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" 
                                 style="height: 250px; object-fit: cover;" 
                                   >
                            @if (product.IsInStock)
                            {
                                <span class="position-absolute top-0 end-0 m-2 badge bg-success">
                                    <i class="bi bi-check-circle"></i> În stoc
                                </span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 end-0 m-2 badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Stoc epuizat
                                </span>
                            }
                            <span class="position-absolute top-0 start-0 m-2 badge bg-primary">
                                @product.Category?.Name
                            </span>

                            @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor")) && product.Status != (int)ProductStatus.Approved)
                            {
                                <span class="position-absolute bottom-0 start-0 m-2 badge bg-warning text-dark">
                                    @(product.Status == (int)ProductStatus.Pending ? "În așteptare" : "Respins")
                                </span>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate mb-2">@product.Title</h5>

                            @{
                                var ratings = ((IEnumerable<ShopKeep.Models.Review>?)product.Reviews)
                                    ?.Where(r => r.Rating.HasValue)
                                    .Select(r => r.Rating!.Value)
                                    .ToList() ?? new List<int>();
                                var avgRating = ratings.Count > 0 ? ratings.Average() : 0;
                            }

                            <div class="mb-2">
                                @await Html.PartialAsync("_StarRating", new ShopKeep.Models.StarRatingVM
                                {
                                    Average = avgRating,
                                    RatingCount = ratings.Count,
                                    CssClass = "small"
                                })
                            </div>

                            <p class="card-text text-muted small flex-grow-1" style="min-height: 60px;">
                                @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h4 text-success mb-0">@product.Price.ToString("C2")</span>
                                <span class="text-muted small">
                                    <i class="bi bi-box"></i> Stoc: @product.Stock
                                </span>
                            </div>
                            
                            @if (!isStaff && product.Status == (int)ProductStatus.Approved)
                            {
                                var isInWishlist = wishlistProductIds.Contains(product.Id);
                                <div class="d-grid gap-2" onclick="event.stopPropagation();">
                                    <form asp-controller="ShoppingCart" asp-action="Add" method="post" class="mb-0">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-success w-100" @(product.IsInStock ? "" : "disabled")>
                                            <i class="bi bi-cart-plus"></i> Adaugă în coș
                                        </button>
                                    </form>
                                    <form asp-controller="Wishlist" asp-action="Add" method="post" class="mb-0 wishlist-form" data-product-id="@product.Id">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <button type="submit" class="btn @(isInWishlist ? "btn-danger" : "btn-outline-danger") w-100 wishlist-btn">
                                            <i class="bi @(isInWishlist ? "bi-heart-fill" : "bi-heart")"></i> <span class="wishlist-text">@(isInWishlist ? "În favorite" : "Adaugă la favorite")</span>
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || canEditorManage))
                            {
                                <div class="btn-group w-100" role="group" onclick="event.stopPropagation();">
                                    <a asp-action="Edit" asp-route-id="@product.Id" 
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Editează
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Șterge
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Editor")))
        {
            <div class="alert alert-info shadow-sm d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Nu există produse</h5>
                    <p class="mb-0">
                        @(User.IsInRole("Editor")
                            ? "Începe prin a propune primul produs."
                            : "Începe prin a adăuga primul produs în catalog.")
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-light border shadow-sm d-flex align-items-center" role="alert">
                <i class="bi bi-hourglass-split fs-3 me-3 text-success"></i>
                <div>
                    <h5 class="alert-heading mb-1">Momentan nu avem produse disponibile</h5>
                    <p class="mb-0 text-muted">Stay tuned — revino în curând!</p>
                </div>
            </div>
        }
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .hover-lift {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const isAuthenticated = @(SignInManager.IsSignedIn(User) ? "true" : "false");
    
    document.querySelectorAll('.wishlist-form').forEach(form => {
        form.addEventListener('submit', function(e) {
            // Dacă user-ul nu este autentificat, lasă form-ul să se submiteze normal (redirect către login)
            if (!isAuthenticated) {
                return;
            }
            
            e.preventDefault();
            
            const formData = new FormData(this);
            const btn = this.querySelector('.wishlist-btn');
            const icon = btn.querySelector('i');
            const text = btn.querySelector('.wishlist-text');
            
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.isAdded) {
                        // Produs adăugat la favorite
                        btn.classList.remove('btn-outline-danger');
                        btn.classList.add('btn-danger');
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        text.textContent = 'În favorite';
                    } else {
                        // Produs șters din favorite
                        btn.classList.remove('btn-danger');
                        btn.classList.add('btn-outline-danger');
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        text.textContent = 'Adaugă la favorite';
                    }
                }
            })
            .catch(error => console.error('Eroare:', error));
        });
    });
});
</script>
